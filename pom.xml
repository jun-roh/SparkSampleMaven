<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <packaging>war</packaging>
    <groupId>com.spark.maven</groupId>
    <artifactId>SparkSampleMaven</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>SparkSampleMaven</name>
    <description>SparkSampleMaven</description>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.1.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>

        <DEPLOY-FILE-NAME>SparkSampleMaven</DEPLOY-FILE-NAME> <!-- 빌드결과물 파일명 -->

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <env>local</env>
        <maven.test.skip>true</maven.test.skip>
    </properties>


    <repositories>
        <repository>
            <id>mulesoft-repository</id>
            <name>Mulesoft Repository for Maven</name>
            <url>https://repository.mulesoft.org/nexus/content/repositories/public/</url>
        </repository>
    </repositories>

